/*-------------------------------------------------------------------------*/

grammar SQL;

/*-------------------------------------------------------------------------*/

options {
	language = Java;
}

/*-------------------------------------------------------------------------*/
/* SQL PARSER                                                              */
/*-------------------------------------------------------------------------*/

query returns [ List<String> v ]
	@init { $v = new ArrayList<>(); }
	:   WS		{ $v.add(  $WS  .getText()); }
	| STRING		{ $v.add($STRING.getText()); }
	|  ch=.		{ $v.add(  $ch  .getText()); }
	;

/*-------------------------------------------------------------------------*/
/* SQL LEXER                                                               */
/*-------------------------------------------------------------------------*/

STRING
	: '\'' ('\'\'' | ~'\'')* '\''
	| '`' ('``' | ~'`')+ '`'
	| '"' ('""' | ~'"')+ '"'
	;

/*-------------------------------------------------------------------------*/

WS
	: [ \t\n\r]+
	;

/*-------------------------------------------------------------------------*/
